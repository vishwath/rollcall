<div class="page-header">
  <h1>Editing Course #<%= @course.id %></h1>
</div>

<%= form_tag(course_url(@course), method: 'patch', class: 'form-horizontal') do %>
  <div class="form-group">
    <%= label_tag :department, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :department, @course.department, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :number, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :number, @course.number, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :title, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :title, @course.title, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-offset-2 col-md-6">
      <%= submit_tag "Update Course", class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
