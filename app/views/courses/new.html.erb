<div class="page-header">
  <h1>New Course</h1>
</div>

<%= form_tag(courses_url, method: 'post', class: 'form-horizontal') do %>
  <div class="form-group">
    <%= label_tag :department, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :department, nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :number, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :number, nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :title, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :title, nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-offset-2 col-md-6">
      <%= submit_tag "Create Course", class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
